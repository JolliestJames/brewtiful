<h1>New Brew</h1>

<%= form_for(@brew) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <br />
  <%= f.label(:abv) %>
  <%= f.number_field(:abv) %>
  <br />
  <%= f.label(:ibus) %>
  <%= f.number_field(:ibus) %>
  <br />
  <%= f.label(:classification) %>
  <%= f.text_field(:classification) %>
  <br />
  <%= f.label(:brewery) %>
  <%= f.number_field(:brewery) %>
  <br />
  <%= f.submit %>
<% end %>